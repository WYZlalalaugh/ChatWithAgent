# ChatAgent环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 应用基础配置
# =============================================================================
APP_ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# =============================================================================
# 服务端口配置
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=80
NGINX_PORT=8080
MYSQL_PORT=3306
REDIS_PORT=6379
CHROMA_PORT=8001
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# 数据库配置
# =============================================================================
MYSQL_ROOT_PASSWORD=chatagent_root_123
MYSQL_DATABASE=chatagent
MYSQL_USER=chatagent
MYSQL_PASSWORD=chatagent_user_123

# =============================================================================
# LLM API配置
# =============================================================================
# OpenAI配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic配置
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google配置
GOOGLE_API_KEY=your-google-api-key-here

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15

# =============================================================================
# 平台集成配置
# =============================================================================
# QQ机器人配置
QQ_APP_ID=your-qq-app-id
QQ_TOKEN=your-qq-token
QQ_APP_SECRET=your-qq-app-secret

# 微信配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 飞书配置
FEISHU_APP_ID=your-feishu-app-id
FEISHU_APP_SECRET=your-feishu-app-secret

# 钉钉配置
DINGTALK_APP_KEY=your-dingtalk-app-key
DINGTALK_APP_SECRET=your-dingtalk-app-secret

# =============================================================================
# 监控配置
# =============================================================================
LOG_LEVEL=INFO
GRAFANA_PASSWORD=admin123

# =============================================================================
# 邮件配置（用于告警通知）
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@gmail.com

# =============================================================================
# 文件存储配置
# =============================================================================
# 本地存储
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp3,mp4,wav

# AWS S3配置（可选）
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-west-2

# =============================================================================
# 安全配置
# =============================================================================
# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com

# 限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# 性能配置
# =============================================================================
# 数据库连接池
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis连接池
REDIS_POOL_SIZE=10

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# 开发配置（仅在开发环境使用）
# =============================================================================
# 开发模式下的配置
DEV_AUTO_RELOAD=true
DEV_LOG_LEVEL=DEBUG